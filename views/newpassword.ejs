    <div class="container">
      <h1> <%= title %></h1>



      
      <% if(msg != '') { %>
        <div class="alert alert-success">
          <strong>Success!</strong> <%= msg %>
        </div>
                <% } %>
      <form action="/newpassword" method="post">
        <div class="form-group">
          <label for="category">Choose-Category</label>
        <select class="form-control" name="passwordcategory" required>

        <option disable> ----CHOOSE A CATEGORY------</option>
          <% if(records.length>0){ 
            records.forEach(function(row){  %> 
            <option value="<%= row.passwordcategory %>"><%= row.passwordcategory %> </option>

<% })}%>


        </select>
        </div>
        
        <div class="form-group" >
          <label for="category">Password Of:</label>
          <input class="form-control"  placeholder="eg: arunsharmamoh@gmail.com & above category:gmail" name="passwordname" required> 
        </div>
        
        <div class="form-group" >
            <label for="category">Password:</label>
            <textarea class="form-control" id="editor"  name="passworddetails" required> eg: 
              www.google.com 
               <br>
              password:123456
              
            </textarea>
          </div>
          
         
          <div class="form-group">
            <button type="submit" class="btn btn-primary">ADD Password</button>
      
           </div>
      
      
    <div class="form-group"><p> to view all Passwords:   <a href="/viewallpassword">click here</a></p>
    </div>    
 
      </div>
      </form>
    </div>
